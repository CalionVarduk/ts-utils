{
    "defaultSeverity": "error",
    "jsRules": true,
    "rules": {
        "ban-ts-ignore": true,
        "member-access": [true, "check-accessor", "check-constructor"],
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "protected-static-field",
                    "private-static-field",
                    "public-static-method",
                    "protected-static-method",
                    "private-static-method",
                    "public-instance-field",
                    "protected-instance-field",
                    "private-instance-field",
                    "public-constructor",
                    "protected-constructor",
                    "private-constructor",
                    "public-instance-method",
                    "protected-instance-method",
                    "private-instance-method"
                ]
            }
        ],
        "no-internal-module": true,
        "no-var-requires": true,
        "await-promise": true,
        "curly": true,
        "function-constructor": true,
        "label-position": true,
        "no-arg": true,
        "no-console": [true, "log"],
        "no-debugger": true,
        "no-duplicate-super": true,
        "no-duplicate-switch-case": true,
        "no-duplicate-variable": [true, "check-parameters"],
        "no-empty": [true, "allow-empty-catch", "allow-empty-functions"],
        "no-eval": true,
        "no-invalid-this": true,
        "no-misused-new": true,
        "no-null-undefined-union": true,
        "no-object-literal-type-assertion": true,
        "no-return-await": true,
        "no-shadowed-variable": [true, { "temporalDeadZone": false }],
        "no-sparse-arrays": true,
        "no-string-throw": true,
        "no-tautology-expression": true,
        "no-this-assignment": true,
        "no-unsafe-finally": true,
        "no-unused-expression": [true, "allow-fast-null-checks", "allow-new", "allow-tagged-template"],
        "no-var-keyword": true,
        "prefer-conditional-expression": [true, "check-else-if"],
        "prefer-object-spread": true,
        "restrict-plus-operands": true,
        "static-this": true,
        "triple-equals": true,
        "unnecessary-constructor": true,
        "use-isnan": true,
        "prefer-const": true,
        "prefer-readonly": true,
        "class-name": true,
        "file-name-casing": [true, "kebab-case"],
        "interface-name": [true, "always-prefix"],
        "no-angle-bracket-type-assertion": true,
        "object-literal-key-quotes": [true, "consistent-as-needed"],
        "prefer-function-over-method": [true, "allow-public", "allow-protected"],
        "prefer-method-signature": true,
        "type-literal-delimiter": true,
        "unnecessary-bind": true,
        "unnecessary-else": true,
        "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
        "eofline": true,
        "indent": [true, "spaces", 2],
        "max-line-length": [true, { "limit": 140, "ignore-pattern": "^import .+ from .+" }],
        "new-parens": true,
        "no-consecutive-blank-lines": true,
        "no-trailing-whitespace": true,
        "quotemark": [true, "single"],
        "semicolon": [true, "always"]
    },
    "rulesDirectory": []
}
